; Top-most EditorConfig file
root = true

; Global settings
[*]
;end_of_line = LF       ; Unix-style newlines
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

; F# source files
[*.fs]
indent_style = space
indent_size = 2

; F# interface specifications
[*.fsi]
indent_style = space
indent_size = 2

; F# lexer specifications
[*.fsl]
indent_style = space
indent_size = 2

; F# parser specifications
[*.fsy]
indent_style = space
indent_size = 2
